{
  "name": "mygame",
  "scripts": {
    "build": "esbuild --bundle src/main.js --outfile=www/main.js --minify",
    "dev": "esbuild --bundle --sourcemap --keep-names src/examples/main.js --outfile=www/main.js --servedir=www",
    "bundle": "npm run build && mkdir -p dist && zip -r dist/game.zip www -x \"**/.DS_Store\""
  },
  "devDependencies": {
    "esbuild": "0.23.0"
  },
  "dependencies": {
    "kaplay": "^3001.0.0-alpha.17"
  }
}
